{
  "name": "@icp-sdk/bindgen",
  "version": "0.0.1-alpha.1",
  "description": "Generate JavaScript bindings for IC canisters",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./core": {
      "types": "./dist/esm/core/index.d.ts",
      "import": "./dist/esm/core/index.js",
      "require": "./dist/cjs/core/index.cjs"
    },
    "./plugins/vite": {
      "types": "./dist/esm/plugins/vite.d.ts",
      "import": "./dist/esm/plugins/vite.js",
      "require": "./dist/cjs/plugins/vite.cjs"
    }
  },
  "bin": {
    "icp-bindgen": "./dist/esm/cli/icp-bindgen.js"
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:wasm": "wasm-pack build ./src/core/generate/rs --target web --out-name icp-js-bindgen --out-dir ./dist --dev --no-pack",
    "build": "pnpm build:wasm && pnpm vite build",
    "test": "vitest"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@tanstack/config": "^0.20.1",
    "@types/node": "^24.3.1",
    "memfs": "^4.39.0",
    "vite": "^7.1.5",
    "vitest": "3.2.4",
    "wasm-pack": "^0.13.1"
  },
  "dependencies": {
    "commander": "^14.0.1"
  }
}
